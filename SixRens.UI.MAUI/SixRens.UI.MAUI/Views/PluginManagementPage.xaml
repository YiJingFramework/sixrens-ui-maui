<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:SixRens.UI.MAUI.ViewModels"
             x:Class="SixRens.UI.MAUI.Views.PluginManagementPage"
             Title="PluginManagementPage"
             x:DataType="vm:PluginManagementPageViewModel"
             Shell.NavBarIsVisible="False" >
    <VerticalStackLayout>
        <Button 
            Text="清除全部插件包"
            Command="{Binding RemoveAllPluginPackagesCommand}"/>
        <Button 
            Text="清除全部预设"
            Command="{Binding RemoveAllPresetsCommand}"/>
    </VerticalStackLayout>
</ContentPage>