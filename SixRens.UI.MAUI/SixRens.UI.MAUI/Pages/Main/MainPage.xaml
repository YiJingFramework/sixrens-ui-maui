<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:ns="clr-namespace:SixRens.UI.MAUI.Pages.Main"
             x:Class="SixRens.UI.MAUI.Pages.Main.MainPage" >

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <Grid x:Name="guidingGrid">
                <Button Text="点击起课" Clicked="GotoDivinationCreationPage"/>
            </Grid>

            <Grid x:Name="caseShowingGrid" x:DataType="ns:BindingCase" IsVisible="False">
                <Label Text="{Binding Text}"></Label>
            </Grid>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
