<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
               xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
               xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
               x:Class="SixRens.UI.MAUI.Pages.CaseCreation.GenderAndBirthSelectionPopup"
               CanBeDismissedByTappingOutsideOfPopup="False" >

    <VerticalStackLayout>
        <HorizontalStackLayout>
            <Label Text="性别" />
            <Picker x:Name="genderPicker" />
        </HorizontalStackLayout>

        <HorizontalStackLayout>
            <Label Text="本命" />
            <Picker x:Name="birthPicker" />
            <Button Text="从西历生日获取" Clicked="SelectBirthWithWestern"/>
        </HorizontalStackLayout>

        <HorizontalStackLayout>
            <Label Text="为课主否" />
            <CheckBox x:Name="isPlateOwnerCheckBox" />
        </HorizontalStackLayout>
        
        <Button Text="取消" Clicked="Cancel"/>
        <Button Text="确认" Clicked="Commit"/>
    </VerticalStackLayout>

</toolkit:Popup>