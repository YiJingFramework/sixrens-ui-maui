<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:corepr="clr-namespace:SixRens.Core.插件管理.预设管理;assembly=SixRens.Core"
             x:Class="SixRens.UI.MAUI.Pages.CaseCreation.CaseCreationPage"
             Title="CaseCreationPage" >
    <VerticalStackLayout>
        <DatePicker x:Name="datePicker" />
        <TimePicker x:Name="timePicker"/>
        <CollectionView
            x:Name="presetCollectionView" 
            SelectionMode="Single" >
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="corepr:预设">
                    <Label Text="{Binding 预设名}"></Label>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
        <Button
            Text="起课"
            Clicked="CreateCase" />

    </VerticalStackLayout>
</ContentPage>