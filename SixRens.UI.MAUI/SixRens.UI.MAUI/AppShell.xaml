<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="SixRens.UI.MAUI.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pages="clr-namespace:SixRens.UI.MAUI.Pages"
    FlyoutBehavior="Disabled" >

    <TabBar>
        
        <ShellContent
            Title="起课"
            Icon="dotnet_bot.png"
            ContentTemplate="{DataTemplate pages:CaseCreationPage}"
            Route="new" />

        <ShellContent
            Title="占例"
            Icon="dotnet_bot.png"
            ContentTemplate="{DataTemplate pages:CaseManagementPage}"
            Route="cases" />

        <ShellContent
            x:Name="mainPage"
            Title="盘面"
            Icon="dotnet_bot.png"
            ContentTemplate="{DataTemplate pages:MainPage}"
            Route="main" />

        <ShellContent
            Title="插件"
            Icon="dotnet_bot.png"
            ContentTemplate="{DataTemplate pages:PluginManagementPage}"
            Route="plugins" />

        <ShellContent
            Title="设置"
            Icon="dotnet_bot.png"
            ContentTemplate="{DataTemplate pages:SettingsPage}"
            Route="settings" />
        
    </TabBar>
</Shell>
